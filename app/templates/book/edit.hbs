<div class="slide-out-bg"></div>
<div class="slide-out">
  <div class="slide-out-card">
    {{#link-to "book" class="btn-back"}}
      <span class="sr-only">{{t "back"}}</span>
    {{/link-to}}

    <div class="slide-out-heading">
      <div class="title">
        <h3>{{t "book.edit"}}</h3>
      </div>
    </div>

    <div class="slide-out-content">
        {{book-form book=model onsubmit=(action "editBook")}}
    </div>
  </div>
</div>