<div class="panel-heading">
  <div class="search">
    {{input type="text" placeholder=(t "report.search") value=search}}
  </div>
</div>

<div class="panel-content">
  <h3 class="panel-title">{{t "report.title"}}</h3>

  {{#if isLoading}}
  <h2>{{t "loading"}}</h2>
  {{else}}
  <ul class="collection">
    {{#each model as |report|}}
          {{report-item tagName='li' reportId=report.id reportDate=report.reportDateView speaker=report.speaker book=report.book}}
    {{/each}}   
  </ul>
  {{/if}}
</div>

{{outlet}}