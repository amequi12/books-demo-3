<div class="slide-out-bg"></div>

<div class="slide-out">
  <div class="slide-out-card">
    {{#link-to "event.index" class="btn-back"}}
    <span class="sr-only">{{t "back"}}</span>
    {{/link-to}}

    <div class="slide-out-heading">
      <div class="title">
        <h3>{{t "event.detail"}} {{model.eventDate}}</h3>
        {{#if (await (can "edit record" model))}}
          <div class="actions">
            {{#link-to "event.edit" model.id class="btn-pop"}}
              {{t "edit"}}
            {{/link-to}}

            <button class="btn-recessed" onclick={{action "deleteEvent" model}}>{{t "delete"}}</button>
          </div>
        {{/if}}
      </div>
    </div>

    <div class="slide-out-content">
      <div class="field">
        <label>{{t "event.attrs.eventDate"}}</label>
        {{model.eventDate}}
      </div>

      <div class="field">
        {{#link-to "report.create" model.id class="btn-secondary btn-add"}}
        {{t "event.reportsAdd"}}
        {{/link-to}}
      </div>
      <div class="field">
        <label>{{t "event.reports"}}</label>
        <ul class="collection">
          {{#each model.reports as |report|}}
          <li>
            {{#link-to "report.detail" report.id}}
            {{report.reportDate}}
            {{/link-to}}
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>