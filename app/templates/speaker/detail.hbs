<div class="slide-out-bg"></div>

<div class="slide-out">
    <div class="slide-out-card">
        {{#link-to "speaker.index" class="btn-back"}}
        <span class="sr-only">{{t "back"}}</span>
        {{/link-to}}

        <div class="slide-out-heading">
            <div class="title">
                <h3>{{model.lastName}} {{model.firstName}}</h3>
                {{#if (await (can "edit record" model))}}
                    <div class="actions">
                        {{#link-to "speaker.edit" model.id class="btn-pop"}}
                            {{t "speaker.edit"}}
                        {{/link-to}}
                        <button class="btn-recessed" onclick={{action "deleteSpeaker" model}}>{{t "delete"}}</button>
                    </div>
                {{/if}}
            </div>
        </div>

        <div class="slide-out-content">
            <div class="field">
                <label>{{t "speaker.attrs.firstName"}}</label>
                {{model.firstName}}
            </div>

            <div class="field">
                <label>{{t "speaker.attrs.middleName"}}</label>
                {{model.middleName}}
            </div>

            <div class="field">
                <label>{{t "speaker.attrs.lastName"}}</label>
                {{model.lastName}}
            </div>
            <div class="field">
                <label>{{t "speaker.attrs.reports"}}</label>
                <ul class="collection">
                    {{#each model.reports as |report|}}
                    <li>
                        {{#link-to "report.detail" report.id}}
                        {{report.reportDate}}
                        {{/link-to}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>