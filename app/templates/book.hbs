<div class="panel-heading">
  <div class="search">
    {{input type="text" placeholder="Search by Book Name" value=search}}
  </div>

  {{#link-to "book.create" class="btn-new"}}
  <div class="sr-only">Add new Book</div>
  {{/link-to}}
</div>

<div class="panel-content">
  <h3 class="panel-title">Books</h3>

  {{#if isLoading}}
  <h2>loading</h2>
  {{else}}
  <ul class="collection">
    {{#each model as |book|}}
    {{book-item bookId=book.id bookName=book.bookName bookAuthor=book.author tagName='li'}}
    {{/each}}
  </ul>
  {{/if}}
</div>

{{outlet}}