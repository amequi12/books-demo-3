<form onsubmit={{action "submitForm"}}>
  <div class="field">
    <label>Book Name</label>
    {{input type="text" placeholder="Book Name" value=bookName}}
  </div>

  <div class="field">
    <label>Author</label>
    {{input type="text" placeholder="Author" value=author}}
  </div>

  <div class="field">
    <label>Number of pages</label>
    {{input type="text" placeholder="Number of pages" value=pagesNumber}}
  </div>

  <div class="field">
    <label>Cover Link</label>
    {{input type="text" placeholder="CoverLink" value=cover}}
  </div>

  <div class="field">
    <label>Tags</label>
    {{input type="text" placeholder="Tags" value=tags}}
  </div>

  <div class="form-footer">
    <button type="submit" class="btn-submit">save</button>
  </div>
</form>